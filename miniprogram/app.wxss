/**app.wxss**/
@import "./colorui.wxss";
@import "./icon.wxss";
@import "./utils/wxss/animation.wxss";
page{
	font-family: PingFangSC-Regular;
}
/* 暂无数据 */
.nodata{
	width: 750rpx;
	padding-top: 100rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-flow: column;
}
.nodata image{
	width: 260rpx;
	height: 244rpx;
}
.nodata text{
	font-size: 30rpx;
	color: #ddd;
	line-height: 90rpx;
}
/* 列表加载 */
.loading{
	width: 750rpx;
	height: 90rpx;
	background-color: #fff;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-top: 10rpx;
}
.loading .loading_img{
	width: 36rpx;
	height: 36rpx;
	animation: loading_img 10s linear infinite;
}
.loading text{
	font-size: 28rpx;
	color: #999;
	margin-left: 20rpx;
}
@keyframes loading_img{
	0%{
		transform: rotate(0);
	}
	50%{
		transform:rotate(1000deg);
	}
	100%{
		transform: rotate(360);
	}
}
/* 按钮hover */
.hoverBlue{
	background-color: red
}
/* getPhoneNumber */
.getPhoneNumberLayer{
    position: fixed;
    width: 750rpx;
    height: 100%;
    background-color: #000;
    opacity: .4;
    top: 0;
    left: 0;
}
.getPhoneNumber-layer{
    position: fixed;
    width: 750rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 0;
    left: 0;
}
.getPhoneNumber-layer button{
    width: 400rpx;
    height: 90rpx;
    background: linear-gradient(90deg,rgba(86,145,200,1) 0%,rgba(53,82,255,1) 0%,rgba(4,145,215,1) 100%,rgba(0,64,253,1) 100%);
    box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(31,111,237,1);
    border-radius: 45rpx;
    font-size: 36rpx;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}