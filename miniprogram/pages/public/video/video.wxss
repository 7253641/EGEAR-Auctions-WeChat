/* pages/video/video.wxss */
page{
	background-color: #000;
}
.video{
	position: fixed;
	width: 100%;
	height: 90%;
	bottom: 0;
}
.video video{
	position: absolute;
	top: 0;
	bottom: 0;
	width: 100%;
	height: 90%;
}
.down{
	width: 750rpx;
	height: 10%;
	position: fixed;
	bottom: 0;
	left: 0;
	display: flex;
	justify-content: center;
	align-items: center;
}
.down text{
	display: inline-block;
	width: 250rpx;
	height: 60rpx;
	font-size: 28rpx;
	color: #fff;
	border-radius: 30rpx;
	border: 1rpx solid #fff;
	text-align: center;
	line-height: 60rpx;
	background-color: #000;
}