/* pages/mybiddes/mybiddes.wxss */
page{
	background-color: #f2f2f2;
}
.bid-list{
	width: 690rpx;
	height: 264rpx;
	box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(0, 0, 0, 0.15);
	border-radius: 20rpx;
	margin: 30rpx 0 0 30rpx;
	padding: 30rpx;
	display: flex;
	justify-content: space-between;
	background-color: #fff;
}
.bid-list .bid-list-left{
	width: 204rpx;
	height: 204rpx;
	position: relative;
	border-radius: 6rpx;
}
.bid-list .bid-list-left image{
	width: 204rpx;
	height: 204rpx;
	border-radius: 6rpx;
}
.bid-list .bid-list-left text{
	width: 204rpx;
	height: 40rpx;
	background: linear-gradient(180deg,rgba(0,0,0,0) 0%,rgba(0,0,0,1) 100%);
	position: absolute;
	bottom: 0;
	left: 0;
	text-align: center;
	line-height: 40rpx;
	color: #fff;
	font-size: 24rpx;
	border-radius: 0 0 6rpx 6rpx;
}
.bid-list .bid-list-right{
	width: 406rpx;
	height: 204rpx;
	position: relative;
}
.bid-list .bid-list-right .bid-list-right_h1{
	display: block;
	width: 406rpx;
	font-size: 28rpx;
	color: #333;
	font-weight: 500;
	overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
}
.bid-list .bid-list-right .bid-list-right_h2{
	display: block;
	width: 406rpx;
	font-size: 26rpx;
	color: #666;
	position: absolute;
	left: 0;
	top: 56rpx;
	overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
}
.bid-list .bid-list-right .bid-list-right-block{
	width: 406rpx;
	display: flex;
	justify-content: space-between;
	position: absolute;
	bottom: 56rpx;
	left: 0;
}
.bid-list .bid-list-right .bo{
	width: 406rpx;
	display: flex;
	justify-content: space-between;
	position: absolute;
	bottom: 8rpx;
	left: 0;
}
.bid-list .bid-list-right .bid-list-right-block text{
	font-size: 26rpx;
	color: #1F6FED;
	font-weight: 500;
}
.bid-list .bid-list-right .bid-list-right-block text::before{
	content: attr(data-text);
	font-size: 26rpx;
	color: #999;
	font-weight: 400;
}
.bid-list .bid-list-right .bid-list-right-block .bid-btn{
	font-size: 22rpx;
	color: #999;
}